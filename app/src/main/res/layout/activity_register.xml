<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg_login"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm_20"
        android:padding="@dimen/dm_5"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/dm_5"
            android:paddingLeft="@dimen/dm_8"
            android:paddingRight="@dimen/dm_10"
            android:paddingTop="@dimen/dm_5"
            android:src="@drawable/ic_back"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dm_8"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="@dimen/t16"
            />


    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm_30"
                android:layout_marginRight="@dimen/dm_30"
                android:layout_marginTop="@dimen/dm_30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="姓名"
                    android:textColor="@color/white"
                    android:textSize="@dimen/t16"/>


                <EditText
                    android:id="@+id/et_nickname"
                    android:layout_width="0dp"
                    android:maxLength="16"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm_5"
                    android:layout_weight="7.5"
                    android:background="@color/transparent"
                    android:hint="请输入姓名"
                    android:textColor="@color/white"
                    android:textSize="@dimen/t16"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_0.5"
                android:layout_marginLeft="@dimen/dm_110"
                android:layout_marginRight="@dimen/dm_30"
                android:layout_marginTop="@dimen/dm_1"
                android:background="@color/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm_30"
                android:layout_marginRight="@dimen/dm_30"
                android:layout_marginTop="@dimen/dm_30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="职务"
                    android:textColor="@color/white"
                    android:textSize="@dimen/t16"/>


                <EditText
                    android:id="@+id/et_position"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm_5"
                    android:layout_weight="7.5"
                    android:maxLength="16"
                    android:background="@color/transparent"
                    android:hint="请输入职务"
                    android:textColor="@color/white"
                    android:textSize="@dimen/t16"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_0.5"
                android:layout_marginLeft="@dimen/dm_110"
                android:layout_marginRight="@dimen/dm_30"
                android:layout_marginTop="@dimen/dm_1"
                android:background="@color/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm_30"
                android:layout_marginRight="@dimen/dm_30"
                android:layout_marginTop="@dimen/dm_30"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="手机号"
                    android:textColor="@color/white"
                    android:textSize="@dimen/t16"/>


                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm_5"
                    android:layout_weight="7.5"
                    android:background="@color/transparent"
                    android:hint="请输入手机号"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:textColor="@color/white"
                    android:textSize="@dimen/t16"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_0.5"
                android:layout_marginLeft="@dimen/dm_110"
                android:layout_marginRight="@dimen/dm_30"
                android:layout_marginTop="@dimen/dm_1"
                android:background="@color/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm_30"
                android:layout_marginRight="@dimen/dm_30"
                android:layout_marginTop="@dimen/dm_30"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="验证码"
                    android:textColor="@color/white"
                    android:textSize="@dimen/t16"/>


                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm_5"
                    android:layout_weight="4.5"
                    android:background="@color/transparent"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:textSize="@dimen/t16"/>

                <TextView
                    android:id="@+id/tv_get_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:text="获取验证码"
                    android:textColor="@color/green"
                    android:textSize="@dimen/t14"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_0.5"
                android:layout_marginLeft="@dimen/dm_110"
                android:layout_marginRight="@dimen/dm_120"
                android:layout_marginTop="@dimen/dm_1"
                android:background="@color/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm_30"
                android:layout_marginRight="@dimen/dm_30"
                android:layout_marginTop="@dimen/dm_30"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="密码"
                    android:textColor="@color/white"
                    android:textSize="@dimen/t16"/>


                <EditText
                    android:id="@+id/et_pwd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm_5"
                    android:layout_weight="7.5"
                    android:background="@color/transparent"
                    android:hint="8-16个字符"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:textColor="@color/white"
                    android:textSize="@dimen/t16"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_0.5"
                android:layout_marginLeft="@dimen/dm_110"
                android:layout_marginRight="@dimen/dm_30"
                android:layout_marginTop="@dimen/dm_1"
                android:background="@color/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm_30"
                android:layout_marginRight="@dimen/dm_30"
                android:layout_marginTop="@dimen/dm_30"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="确认密码"
                    android:textColor="@color/white"
                    android:textSize="@dimen/t16"/>


                <EditText
                    android:id="@+id/et_pwd1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm_5"
                    android:layout_weight="7.5"
                    android:background="@color/transparent"
                    android:hint="8-16个字符"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:textColor="@color/white"
                    android:textSize="@dimen/t16"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_0.5"
                android:layout_marginLeft="@dimen/dm_110"
                android:layout_marginRight="@dimen/dm_30"
                android:layout_marginTop="@dimen/dm_1"
                android:background="@color/line"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm_30"
                android:layout_marginRight="@dimen/dm_30"
                android:layout_marginTop="@dimen/dm_30"
                android:text="业务范围"
                android:textColor="@color/white"
                android:textSize="@dimen/t16"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dm_10">

                <TextView
                    android:id="@+id/tv_role_type1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dm_10"
                    android:layout_weight="1"
                    android:background="@drawable/common_white_frame_selector"
                    android:gravity="center"
                    android:padding="@dimen/dm_5"
                    android:text="散房"
                    android:textColor="@color/white"
                    android:textSize="@dimen/t14"/>
                <TextView
                    android:id="@+id/tv_role_type2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dm_10"
                    android:layout_weight="1"
                    android:background="@drawable/common_white_frame_selector"
                    android:gravity="center"
                    android:padding="@dimen/dm_5"
                    android:text="团房"
                    android:textColor="@color/white"
                    android:textSize="@dimen/t14"/>
                <TextView
                    android:id="@+id/tv_role_type3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dm_10"
                    android:layout_weight="1"
                    android:background="@drawable/common_white_frame_selector"
                    android:gravity="center"
                    android:padding="@dimen/dm_5"
                    android:text="宴会"
                    android:textColor="@color/white"
                    android:textSize="@dimen/t14"/>
                <TextView
                    android:id="@+id/tv_role_type4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dm_10"
                    android:layout_weight="1"
                    android:background="@drawable/common_white_frame_selector"
                    android:gravity="center"
                    android:padding="@dimen/dm_5"
                    android:text="会议"
                    android:textColor="@color/white"
                    android:textSize="@dimen/t14"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_register"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dm_40"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dm_30"
                android:background="@drawable/white_frame_45dp"
                android:paddingLeft="@dimen/dm_30"
                android:paddingRight="@dimen/dm_30"
                android:text="立即注册"
                android:textColor="@color/white"
                android:textSize="@dimen/t22"
                android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>