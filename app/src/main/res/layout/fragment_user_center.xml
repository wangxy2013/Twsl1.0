<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:orientation="vertical"
    >


    <View
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_40">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的"
            android:textColor="@color/black"
            android:textSize="@dimen/t16"/>

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dm_15"
            android:text="编辑"
            android:textColor="@color/black"
            android:textSize="@dimen/t14"/>
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm_15"
            android:layout_marginRight="@dimen/dm_15"
            android:text="取消"
            android:textColor="@color/black"
            android:textSize="@dimen/t14"
            android:visibility="gone"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_10"
        android:padding="@dimen/dm_15">

        <com.twlrg.twsl.widget.CircleImageView
            android:id="@+id/iv_user_head"
            android:layout_width="@dimen/dm_70"
            android:layout_height="@dimen/dm_70"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_user"/>

        <RelativeLayout
            android:id="@+id/ll_nickName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_15"
            android:layout_marginRight="@dimen/dm_10"
            android:layout_toRightOf="@+id/iv_user_head"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_nick_nae"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="昵称:"
                android:textColor="@color/black"
                android:textSize="@dimen/t14"/>

            <EditText
                android:id="@+id/et_nickName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dm_5"
                android:layout_toRightOf="@+id/tv_nick_nae"
                android:background="@drawable/edittext_selector"
                android:padding="@dimen/dm_5"
                android:textColor="@color/black"
                android:textSize="@dimen/t14"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_nickName"
            android:layout_marginLeft="@dimen/dm_15"
            android:layout_marginRight="@dimen/dm_10"
            android:layout_marginTop="@dimen/dm_15"
            android:layout_toRightOf="@+id/iv_user_head"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_user_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="账号:"
                android:textColor="@color/black"
                android:textSize="@dimen/t14"/>

            <TextView
                android:id="@+id/tv_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dm_5"
                android:layout_toRightOf="@+id/tv_user_account"
                android:textColor="@color/black"
                android:textSize="@dimen/t14"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_15"
        android:layout_marginTop="@dimen/dm_15"
        android:layout_marginRight="@dimen/dm_10"
        android:layout_toRightOf="@+id/iv_user_head"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="姓名"
            android:textColor="@color/black"
            android:textSize="@dimen/t16"/>

        <EditText
            android:id="@+id/et_userName"
            android:layout_marginLeft="@dimen/dm_5"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/dm_10"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_selector"
            android:padding="@dimen/dm_5"
            android:textColor="@color/black"
            android:textSize="@dimen/t16" android:layout_alignParentTop="true" android:layout_toRightOf="@+id/tv_user_name"
            android:layout_toEndOf="@+id/tv_user_name"/>
    </RelativeLayout>

    <View
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/dm_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_1"
        android:background="@color/line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_15"
        android:layout_marginTop="@dimen/dm_15"
        android:layout_marginRight="@dimen/dm_10"
        android:layout_toRightOf="@+id/iv_user_head"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_user_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="性别"
            android:textColor="@color/black"
            android:textSize="@dimen/t16"/>

        <TextView
            android:id="@+id/tv_userSex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dm_10"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm_5"
            android:layout_toRightOf="@+id/tv_user_sex"
            android:background="@drawable/edittext_selector"
            android:padding="@dimen/dm_5"
            android:textColor="@color/black"
            android:textSize="@dimen/t16"/>
    </RelativeLayout>

    <View
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/dm_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_1"
        android:background="@color/line"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_15"
        android:layout_marginTop="@dimen/dm_15"
        android:layout_marginRight="@dimen/dm_10"
        android:layout_toRightOf="@+id/iv_user_head"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="手机"
            android:textColor="@color/black"
            android:textSize="@dimen/t16"/>

        <TextView
            android:id="@+id/tv_userPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dm_10"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm_5"
            android:layout_toRightOf="@+id/tv_user_phone"
            android:padding="@dimen/dm_5"
            android:textColor="@color/black"
            android:textSize="@dimen/t16"/>
    </RelativeLayout>

    <View
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/dm_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_1"
        android:background="@color/line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_15"
        android:layout_marginTop="@dimen/dm_15"
        android:layout_marginRight="@dimen/dm_10"
        android:layout_toRightOf="@+id/iv_user_head"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="邮箱"
            android:textColor="@color/black"
            android:textSize="@dimen/t16"/>

        <EditText
            android:id="@+id/et_userEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dm_10"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm_5"
            android:layout_toRightOf="@+id/tv_user_email"
            android:background="@drawable/edittext_selector"
            android:padding="@dimen/dm_5"
            android:textColor="@color/black"
            android:textSize="@dimen/t16"/>
    </RelativeLayout>

    <View
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/dm_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_1"
        android:background="@color/line"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_15"
        android:layout_marginTop="@dimen/dm_15"
        android:layout_marginRight="@dimen/dm_10"
        android:layout_toRightOf="@+id/iv_user_head"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_user_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="手机"
            android:textColor="@color/black"
            android:textSize="@dimen/t16"/>

        <EditText
            android:textStyle="bold"
            android:background="@color/translucent"
            android:text="012345678"
            android:inputType="textPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm_5"
            android:layout_toRightOf="@+id/tv_user_pwd"
            android:padding="@dimen/dm_5"
            android:textColor="@color/black"
            android:textSize="@dimen/t16"/>

        <TextView
            android:id="@+id/tv_modify_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dm_15"
            android:text="修改"
            android:textColor="@color/black"
            android:textSize="@dimen/t14"/>
    </RelativeLayout>

    <View
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/dm_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_1"
        android:background="@color/line"/>


    <TextView
        android:id="@+id/tv_version"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="版本:V1.1.0"
        android:layout_marginTop="@dimen/dm_15"
        android:textColor="@color/black"
        android:textSize="@dimen/t14"/>

    <Button
        android:id="@+id/btn_logout"
        android:layout_marginTop="@dimen/dm_10"
        android:textColor="@color/white"
        android:text="退出登录"
        android:textSize="@dimen/t18"
        android:layout_marginLeft="@dimen/dm_25"
        android:layout_marginRight="@dimen/dm_25"
        android:background="@drawable/common_light_blue_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
