<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg_login"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_marginTop="@dimen/dm_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dm_5"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/dm_5"
            android:paddingLeft="@dimen/dm_8"
            android:paddingRight="@dimen/dm_10"
            android:paddingTop="@dimen/dm_5"
            android:src="@drawable/ic_back"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dm_8"
            android:text="忘记密码"
            android:textColor="@color/white"
            android:textSize="@dimen/t16"
            />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_30"
        android:layout_marginRight="@dimen/dm_30"
        android:layout_marginTop="@dimen/dm_120"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:text="手机"
            android:textColor="@color/white"
            android:textSize="@dimen/t16"/>


        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="7.5"
            android:background="@color/transparent"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="@color/white"
            android:textSize="@dimen/t16"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_0.5"
        android:layout_marginLeft="@dimen/dm_110"
        android:layout_marginRight="@dimen/dm_30"
        android:layout_marginTop="@dimen/dm_1"
        android:background="@color/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_30"
        android:layout_marginRight="@dimen/dm_30"
        android:layout_marginTop="@dimen/dm_30"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:text="验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/t16"/>


        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_5"
            android:layout_weight="4.5"
            android:background="@color/transparent"
            android:hint="请输入验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/t16"/>

        <TextView
            android:id="@+id/tv_get_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="right"
            android:text="获取验证码"
            android:textColor="@color/green"
            android:textSize="@dimen/t14"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_0.5"
        android:layout_marginLeft="@dimen/dm_110"
        android:layout_marginRight="@dimen/dm_120"
        android:layout_marginTop="@dimen/dm_1"
        android:background="@color/line"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_30"
        android:layout_marginRight="@dimen/dm_30"
        android:layout_marginTop="@dimen/dm_30"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:text="密码"
            android:textColor="@color/white"
            android:textSize="@dimen/t16"/>


        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7.5"
            android:layout_marginLeft="@dimen/dm_5"
            android:background="@color/transparent"
            android:inputType="textPassword"
            android:hint="输入新密码(8-16个字符)"
            android:maxLength="16"
            android:textColor="@color/white"
            android:textSize="@dimen/t16"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_0.5"
        android:layout_marginLeft="@dimen/dm_110"
        android:layout_marginRight="@dimen/dm_30"
        android:layout_marginTop="@dimen/dm_1"
        android:background="@color/line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_30"
        android:layout_marginRight="@dimen/dm_30"
        android:layout_marginTop="@dimen/dm_30"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:text="确认密码"
            android:textColor="@color/white"
            android:textSize="@dimen/t16"/>


        <EditText
            android:id="@+id/et_pwd1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7.5"
            android:background="@color/transparent"
            android:inputType="textPassword"
            android:layout_marginLeft="@dimen/dm_5"
            android:hint="输入新密码(8-16个字符)"
            android:maxLength="16"
            android:textColor="@color/white"
            android:textSize="@dimen/t16"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_0.5"
        android:layout_marginLeft="@dimen/dm_110"
        android:layout_marginRight="@dimen/dm_30"
        android:layout_marginTop="@dimen/dm_1"
        android:background="@color/line"/>


    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dm_40"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dm_80"
        android:background="@drawable/white_frame_45dp"
        android:paddingLeft="@dimen/dm_30"
        android:paddingRight="@dimen/dm_30"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="@dimen/t22"
        android:textStyle="bold"/>


</LinearLayout>