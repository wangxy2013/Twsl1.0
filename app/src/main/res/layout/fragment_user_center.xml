<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:orientation="vertical"
    >


    <View
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_40">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的"
            android:textColor="@color/black"
            android:textSize="@dimen/t16"/>

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dm_15"
            android:text="编辑"
            android:textColor="@color/black"
            android:textSize="@dimen/t14"/>
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm_15"
            android:layout_marginRight="@dimen/dm_15"
            android:text="取消"
            android:textColor="@color/black"
            android:textSize="@dimen/t14"
            android:visibility="gone"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_10"
        android:padding="@dimen/dm_15">

        <com.twlrg.twsl.widget.CircleImageView
            android:id="@+id/iv_user_head"
            android:layout_width="@dimen/dm_70"
            android:layout_height="@dimen/dm_70"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_user"/>

        <TextView
            android:id="@+id/tv_change_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="换头像"
            android:textColor="@color/green"
            android:textSize="@dimen/t14"/>

        <TextView
            android:id="@+id/tv_hotel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm_5"
            android:layout_marginRight="@dimen/dm_10"
            android:layout_toLeftOf="@+id/tv_change_head"
            android:layout_toRightOf="@+id/iv_user_head"
            android:padding="@dimen/dm_5"
            android:textColor="@color/black"
            android:textSize="@dimen/t14"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_15"
        android:layout_marginRight="@dimen/dm_10"
        android:layout_marginTop="@dimen/dm_15"
        android:layout_toRightOf="@+id/iv_user_head"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="姓名"
            android:textColor="@color/black"
            android:textSize="@dimen/t16"/>

        <TextView
            android:id="@+id/tv_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dm_5"
            android:layout_marginRight="@dimen/dm_10"
            android:layout_toEndOf="@+id/tv_user_name"
            android:layout_toRightOf="@+id/tv_user_name"
            android:background="@drawable/edittext_selector"
            android:enabled="false" android:padding="@dimen/dm_5" android:textColor="@color/black"
            android:textSize="@dimen/t16"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/dm_5"
        android:background="@color/line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_15"
        android:layout_marginRight="@dimen/dm_10"
        android:layout_marginTop="@dimen/dm_15"
        android:layout_toRightOf="@+id/iv_user_head"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="职务"
            android:textColor="@color/black"
            android:textSize="@dimen/t16"/>

        <EditText
            android:id="@+id/et_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm_5"
            android:layout_marginRight="@dimen/dm_10"
            android:layout_toRightOf="@+id/tv_position"
            android:background="@drawable/edittext_selector"
            android:padding="@dimen/dm_5"
            android:textColor="@color/black"
            android:textSize="@dimen/t16"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/dm_5"
        android:background="@color/line"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_15"
        android:layout_marginRight="@dimen/dm_10"
        android:layout_marginTop="@dimen/dm_15"
        android:layout_toRightOf="@+id/iv_user_head"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="手机"
            android:textColor="@color/black"
            android:textSize="@dimen/t16"/>

        <TextView
            android:id="@+id/tv_userPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm_5"
            android:layout_marginRight="@dimen/dm_10"
            android:layout_toRightOf="@+id/tv_user_phone"
            android:padding="@dimen/dm_5"
            android:textColor="@color/black"
            android:textSize="@dimen/t16"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/dm_5"
        android:background="@color/line"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_15"
        android:layout_marginRight="@dimen/dm_10"
        android:layout_marginTop="@dimen/dm_15"
        android:layout_toRightOf="@+id/iv_user_head"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_user_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="密码"
            android:textColor="@color/black"
            android:textSize="@dimen/t16"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm_5"
            android:layout_toRightOf="@+id/tv_user_pwd"
            android:background="@color/translucent"
            android:inputType="textPassword"
            android:padding="@dimen/dm_5"
            android:text="012345678"
            android:textColor="@color/black"
            android:textSize="@dimen/t16"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_modify_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dm_15"
            android:text="修改"
            android:textColor="@color/black"
            android:textSize="@dimen/t14"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/dm_5"
        android:background="@color/line"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_15"
        android:layout_marginRight="@dimen/dm_10"
        android:layout_marginTop="@dimen/dm_15"
        android:text="业务范围"
        android:textColor="@color/black"
        android:textSize="@dimen/t14"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dm_10">

        <TextView
            android:id="@+id/tv_role_type1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dm_10"
            android:layout_weight="1"
            android:background="@drawable/common_black_frame_selector"
            android:gravity="center"
            android:padding="@dimen/dm_5"
            android:text="散房"
            android:textColor="@color/blackA"
            android:textSize="@dimen/t14"/>
        <TextView
            android:id="@+id/tv_role_type2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dm_10"
            android:layout_weight="1"
            android:background="@drawable/common_black_frame_selector"
            android:gravity="center"
            android:padding="@dimen/dm_5"
            android:text="团房"
            android:textColor="@color/blackA"
            android:textSize="@dimen/t14"/>
        <TextView
            android:id="@+id/tv_role_type3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dm_10"
            android:layout_weight="1"
            android:background="@drawable/common_black_frame_selector"
            android:gravity="center"
            android:padding="@dimen/dm_5"
            android:text="宴会"
            android:textColor="@color/blackA"
            android:textSize="@dimen/t14"/>
        <TextView
            android:id="@+id/tv_role_type4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dm_10"
            android:layout_weight="1"
            android:background="@drawable/common_black_frame_selector"
            android:gravity="center"
            android:padding="@dimen/dm_5"
            android:text="会议"
            android:textColor="@color/blackA"
            android:textSize="@dimen/t14"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_25"
        android:layout_marginRight="@dimen/dm_25"
        android:layout_marginTop="@dimen/dm_10"
        android:background="@drawable/common_light_blue_bg"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="@dimen/t18"/>
</LinearLayout>
