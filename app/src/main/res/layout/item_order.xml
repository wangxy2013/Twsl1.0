<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/ll_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dm_10"
    android:background="@drawable/common_white_bg"
    android:orientation="vertical"
    android:padding="@dimen/dm_10"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.twlrg.twsl.widget.AutoFitTextView
            android:id="@+id/tv_merchant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dm_15"
            android:layout_toLeftOf="@+id/tv_total_fee"
            android:maxLines="1"
            android:text="某某酒店1"
            android:textColor="@color/black"
            android:textSize="@dimen/t16"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="@dimen/dm_66"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/common_yellow_5dp"
            android:paddingBottom="@dimen/dm_5"
            android:paddingTop="@dimen/dm_5"
            android:text="待确认"
            android:textColor="@color/white"
            android:textSize="@dimen/t14"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm_10">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="豪华大床房(无早餐)"
            android:textColor="@color/black"
            android:textSize="@dimen/t14"/>

        <TextView
            android:id="@+id/tv_room_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dm_15"
            android:text="1间"
            android:textColor="@color/black"
            android:textSize="@dimen/t14"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm_10">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1111111"
            android:textColor="@color/blackA"
            android:textSize="@dimen/t14"/>

        <TextView
            android:id="@+id/tv_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dm_15"
            android:text="1晚"
            android:textColor="@color/blackA"
            android:textSize="@dimen/t14"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_order_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dm_10"
        android:textColor="@color/blackA"
        android:textSize="@dimen/t14"/>

    <TextView
        android:id="@+id/tv_create_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dm_10"
        android:gravity="right"
        android:text="2017-05-12 16:05"
        android:textColor="@color/blackA"
        android:textSize="@dimen/t14"/>
</LinearLayout>